<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:paddingStart="8dip"
    android:paddingEnd="8dip">

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/video_thumbnail_view"
        android:layout_width="152dip"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/duration_and_date"
        android:layout_width="100dip"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_and_subtitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/video_thumbnail_view"
        android:layout_toStartOf="@id/duration_and_date"
        android:orientation="vertical"
        android:paddingStart="8dip"
        android:paddingEnd="8dip">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:textSize="20sp"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="68dip"
            android:textSize="12sp"
            android:maxLines="4"
            android:ellipsize="end"/>

    </LinearLayout>

</RelativeLayout>