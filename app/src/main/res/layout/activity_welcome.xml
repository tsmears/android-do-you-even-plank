<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_screen_icon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:src="@drawable/ic_icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/welcome_screen_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcome_screen_message"
        android:layout_below="@id/welcome_screen_icon"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/welcome_screen_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/error_fetching_video_metadata"
        android:layout_below="@id/welcome_screen_message"
        android:paddingTop="60dip"
        android:visibility="gone"/>

</RelativeLayout>