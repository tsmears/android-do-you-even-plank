<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item> <!-- http://stackoverflow.com/a/39885641/665632 -->
    </style>

    <!-- black message text, blue confirmation buttons -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PickDurationButtonStyle">
        <item name="android:textColor">@color/plank_blue</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PreviewVideoActionButtonStyle">
        <item name="android:textColor">@color/plank_blue</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_width">240dip</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
